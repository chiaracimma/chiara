<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
		/* stili per la barra di navigazione */
		.navbar {
			overflow: hidden;
			background-color: #333;
			position: fixed;
			top: 0;
			width: 100%;
		}
		
		/* stili per il logo */
		.navbar img {
			float: left;
			height: 50px;
			padding: 10px;
		}
		
		/* stili per i link della barra di navigazione */
		.navbar a {
			float: right;
			display: block;
			color: #f2f2f2;
			text-align: center;
			padding: 14px 16px;
			text-decoration: none;
		}
		
		/* stili per il pulsante di menu */
		.navbar .icon {
			display: none;
		}
		
		/* media query per la visualizzazione del menu quando si ridimensiona la finestra */
		@media screen and (max-width: 600px) {
			.navbar a:not(:first-child) {
				display: none;
			}
			.navbar a.icon {
				float: right;
				display: block;
			}
		}
		
		/* stili per il menu mobile */
		.responsive {
			overflow: hidden;
			background-color: #333;
		}
		
		/* stili per i link del menu mobile */
		.responsive a {
			float: none;
			display: block;
			text-align: left;
		}
	</style>
</head>
<body>

	<!-- barra di navigazione -->
	<div class="navbar">
		<img 
		src="https://img.freepik.com/premium-vector/minimal-fashion-logo-with-elegant-style-leaf_278222-3165.jpg"
		style="width:40px;height:20px;" 
		alt="immagine">
		<a href="#home">Home</a>
		<a href="#about">About</a>
		<a href="#contact">Contact</a>
		<a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
	</div>

	<!-- menu mobile -->
	<div class="responsive" id="myLinks">
		<a href="#home">Home</a>
		<a href="#about">About</a>
		<a href="#contact">Contact</a>
	</div>

	<!-- script per il pulsante di menu -->
	<script>
		function myFunction() {
			var x = document.getElementById("myLinks");
			if (x.style.display === "block") {
				x.style.display = "none";
			} else {
				x.style.display = "block";
			}
		}
	</script>

</body>
</html>
